---
export const menuItems = [
  { name: 'Dashboard', link: '/Manager/Index' },
  { name: 'Restaurant', link: '/Manager/RestaurantInfo' },
  { name: 'Menu', link: '/Manager/ListMenu' },
  { name: 'Account', link: '/Manager/AccountInfo' },
  { name: 'Order', link: '/Manager/ListOrder' },
];
---
<html>
    <head>
        <style>
            .sidebar {
              height: 100vh;
              width: 250px;
              position: fixed;
              left: 0;
              top: 0;
              background-color: #333;
              color: white;
              display: flex;
              flex-direction: column;
              padding-top: 20px;
            }
            .sidebar a {
              padding: 15px 20px;
              text-decoration: none;
              color: white;
              display: block;
            }
            .sidebar a:hover {
              background-color: #575757;
            }
          </style>
          
          
    </head>
    <body>
        <div class="sidebar">
            {menuItems.map(item => (
              <a href={item.link}>{item.name}</a>
            ))}
          </div>
    </body>
</html>
---
import Customerlayout from "src/shares/customerlayout.astro";
---
<style>
    .restaurant-info {
        text-align: center;
        margin-bottom: 20px;
    }
    .restaurant-info img {
        max-width: 100%;
        height: auto;
    }
    .review-form {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }
</style>
<Customerlayout>
    <div class="container">
        <div class="restaurant-info">
            <h1 id="restaurant-name">Restaurant Name</h1>
            <img id="restaurant-image" src="restaurant.jpg" alt="Restaurant Image">
        </div>
        <form class="review-form" id="reviewForm">
            <div class="form-group">
                <label for="reviewText">Your Review:</label>
                <textarea class="form-control" id="reviewText" rows="5" placeholder="Write your review here..."></textarea>
            </div>
            <div class="form-group">
                <label for="uploadImage">Upload Image:</label>
                <input type="file" class="form-control-file" id="uploadImage">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <script>
        document.getElementById('reviewForm')?.addEventListener('submit', function(event) {
            event.preventDefault(); // Prevent the default form submission

            const reviewTextElement = document.getElementById('reviewText') as HTMLTextAreaElement | null;
            const uploadImageElement = document.getElementById('uploadImage') as HTMLInputElement | null;
            const reviewText = reviewTextElement?.value ?? '';
            const uploadImage = uploadImageElement?.files?.[0] ?? null;

            // You can add code here to handle the form submission,
            // like sending the data to your server using AJAX

            console.log('Review Text:', reviewText);
            console.log('Uploaded Image:', uploadImage);

            alert('Review submitted successfully!');
        });
    </script>
</Customerlayout>
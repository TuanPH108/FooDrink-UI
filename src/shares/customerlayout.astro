                                <li class="dropdown">
                                    <a
                                        href="#"
                                        class="dropdown-toggle"
                                        id="userIcon"
                                        onclick="toggleDropdown()"
                                    >
                                        <i class="fas fa-user"></i>
                                    </a>
                                    <select
                                        class="dropdown-menu"
                                        id="userDropdown"
                                        onchange="handleSelectChange(event)"
                                    >
                                        <option value="">Select...</option>
                                        <option value="signin">Sign In</option>
                                        <option value="register"
                                            >Register</option

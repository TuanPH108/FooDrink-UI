<nav class="navbar">
    <div class="navbar-container">
      <a href="/" class="navbar-logo">MyRestaurant</a>
      <form class="navbar-search" action="/search" method="get">
        <input type="text" name="q" placeholder="Search..." aria-label="Search">
        <button type="submit">Search</button>
      </form>
      <div class="navbar-auth">
        <a href="/login" class="btn btn-login">Login</a>
        <a href="/create-account" class="btn btn-create-account">Create Account</a>
      </div>
    </div>
  </nav>
  
  <style>
    .navbar {
      background-color: black; /* Màu xanh đậm */
      padding: 1rem;
    }
  
    .navbar-container {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
  
    .navbar-logo {
      font-size: 1.5rem;
      font-weight: bold;
      color: #ffffff; /* Màu trắng */
      text-decoration: none;
    }
  
    .navbar-search {
      display: flex;
      align-items: center;
      flex-grow: 1;
      margin: 0 1rem;
    }
  
    .navbar-search input[type="text"] {
      padding: 0.5rem;
      border: none;
      border-radius: 4px;
      font-size: 1rem;
      outline: none;
    }
  
    .navbar-search button {
      padding: 0.5rem 1rem;
      border: none;
      background-color: #f39c12; /* Màu cam */
      color: #ffffff; /* Màu trắng */
      border-radius: 4px;
      cursor: pointer;
    }
  
    .navbar-search button:hover {
      background-color: #d35400; /* Màu cam nhạt khi hover */
    }
  
    .navbar-auth {
      display: flex;
      gap: 1rem;
      justify-content: flex-end; /* Đặt nút ở góc phải */
    }
  
    .btn {
      padding: 0.5rem 1rem;
      text-decoration: none;
      border-radius: 4px;
      font-size: 1rem;
      font-weight: bold;
    }
  
    .btn-login {
      background-color: #c0392b; /* Màu đỏ */
      color: #ffffff; /* Màu trắng */
    }
  
    .btn-login:hover {
      background-color: #a93226; /* Màu đỏ nhạt khi hover */
    }
  
    .btn-create-account {
      background-color: #2980b9; /* Màu xanh nhạt */
      color: #ffffff; /* Màu trắng */
    }
  
    .btn-create-account:hover {
      background-color: #1f618d; /* Màu xanh đậm nhạt khi hover */
    }
  </style>
  